@model Predmet
@{
    ViewBag.Title = "Nov predmet";
}

<h2 style="text-align:center">Nov predmet</h2>

<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <!--<form class="form-horizontal">-->
            <div class="well">
                @using (Html.BeginForm("Sacuvaj", "Predmeti", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                    <fieldset>
                        <legend>Novi</legend>
                        <div class="form-group">


                            @Html.LabelFor(p => p.NazivPredmeta, new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">


                                @Html.TextBoxFor(p => p.NazivPredmeta, new { @class = "form-control", placeholder = " Unesite Naziv" })
                                @Html.ValidationMessageFor(p => p.NazivPredmeta)
                            </div>
                        </div>
                        

                        <div class="form-group">
                            <div class="col-md-10 col-md-offset-2">
                                <button type="reset" class="btn btn-default">Poništi</button>
                                <button type="submit" class="btn btn-primary">Sačuvaj</button>
                            </div>
                        </div>


                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>
<!--       </form> -->



@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}

