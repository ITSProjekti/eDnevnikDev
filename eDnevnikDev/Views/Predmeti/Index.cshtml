@model ListaPredmetaViewModel
@{
    ViewBag.Title = "Lista predmeta";
}

    <div class="row">
        <div class="col-md-12">

            <h2 style="text-align:center">Predmeti</h2>

            @Html.ActionLink("Dodaj Novi", "Dodaj", "Predmeti", null, new { @class = "btn btn-success" })
            <br/>
            <br/>
            <table class="table  table-hover"   id="predmeti">
                <thead style="background-color:#9dbf75;">
                    <tr>
                        <th>Naziv</th>
                        <th>Tip</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Predmet predmet in Model.ListaPredmeta)
                    {
                        <tr>
                            <td>
                                @predmet.NazivPredmeta
                            </td>
                            <td>
                                @predmet.TipOcenePredmeta.Tip
                            </td>
                            <td>
                                <center>
                                    <a class="btn btn-success btn-xs" href="/Predmeti/IzmeniPredmet/@predmet.PredmetID">Izmeni</a>
                                </center>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

@section Scripts{
    <script>
        $(function () {
            $('#predmeti').DataTable({
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.15/i18n/Serbian.json"
                }
            });

            var dodatPredmet=false;
            var dodatPredmet=@Html.Raw(Json.Encode(Model.DodatPredmet));

            if(dodatPredmet)
            {
                swal({
                    confirmButtonColor: '#8ad919',
                    type: 'success',
                    title: 'Uspeh!',
                    text: 'Uspešno ste dodali nov predmet!'
                });
            }

            var izmenjenPredmet=false;
            var izmenjenPredmet=@Html.Raw(Json.Encode(Model.IzmenjenPredmet));

            if(izmenjenPredmet)
            {
                swal({
                    confirmButtonColor: '#8ad919',
                    type: 'success',
                    title: 'Uspeh!',
                    text: 'Uspešno ste izmenili predmet!'
                });
            }
        });
    </script>
   }


