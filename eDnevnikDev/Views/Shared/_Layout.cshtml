<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/styles.css" rel="stylesheet" />
    <link href="https://unpkg.com/bootstrap-switch/dist/css/bootstrap3/bootstrap-switch.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/loadingScreenStyle.css">
    <link href="~/Content/sweetalert2.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar  navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container-fluid">
                <a class="navbar-brand" id="ime" href="#">
                    <img  src="~/Content/images/logo3.png" alt="Dispute Bills"><b id="naziv"><span>Poljoprivredno-veterinarska škola  </span>- "Svilajnac"</b>
                </a>
                <div id="hamburger">
                    <ul class="user-menu">
                        <li class="dropdown pull-right" id="admin">

                            @using Microsoft.AspNet.Identity
                            @if (Request.IsAuthenticated)
                            {
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    @User.Identity.GetUserName() <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <a href="/Manage">
                                            <svg class="glyph stroked male-user">
                                                <use xlink:href="#stroked-male-user"></use>
                                            </svg> @User.Identity.GetUserName()
                                        </a>
                                    </li>
                                    <li>
                                        <a href="javascript:document.getElementById('logoutForm').submit()">
                                            <svg class="glyph stroked cancel">
                                                <use xlink:href="#stroked-cancel"></use>
                                            </svg> Izloguj se
                                        </a>
                                    </li>
                                </ul>
                            }
                            else
                            {

                                <a href="/Account/LogIn">
                                    Uloguj se
                                </a>

                            }
                        </li>
                    </ul>
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#sidebar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
               
        </div>
        <!-- /.container-fluid -->
    </nav>
@using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
{
    @Html.AntiForgeryToken()
}
            <!----Sajdbar---->
            <div id="sidebar-collapse" class="col-md-2 sidebar">
                <ul class="nav menu" id="sidebar">
                    <li class="parent ">
                        <a data-toggle="collapse" href="#sub-item-1">
                            <span ><svg class="glyph stroked chevron-down"><use xlink:href="#stroked-chevron-down"></use></svg></span> Učenici
                        </a>
                        <ul class="children collapse" id="sub-item-1">
                            <li>
                                @Html.ActionLink("Dodaj ucenika", "Dodaj", "Ucenici")
                            </li>
                            <li>
                                @Html.ActionLink("Lista ucenika", "Index", "Ucenici")
                            </li>
                        </ul>
                    </li>
                    <li class="parent">
                        <a data-toggle="collapse" href="#sub-item-2">
                            <span><svg class="glyph stroked chevron-down"><use xlink:href="#stroked-chevron-down"></use></svg></span> Profesori
                        </a>
                        <ul class="children collapse" id="sub-item-2">
                            <li>
                                @Html.ActionLink("Dodaj profesora", "Dodaj", "Profesori")
                            </li>
                            <li>
                                @Html.ActionLink("Lista profesora", "Index", "Profesori")
                            </li>
                        </ul>
                    </li>
                    <li class="parent">
                        <a data-toggle="collapse" href="#sub-item-3">
                            <span><svg class="glyph stroked chevron-down"><use xlink:href="#stroked-chevron-down"></use></svg></span> Predmeti
                        </a>
                        <ul class="children collapse" id="sub-item-3">
                            <li>
                                @Html.ActionLink("Dodaj predmet", "Dodaj", "Predmeti")
                            </li>
                            <li>
                                @Html.ActionLink("Lista predmeta", "Index", "Predmeti")
                            </li>
                        </ul>
                    </li>
                    <li class="parent" >
                        <a  data-toggle="collapse" href="#sub-item-4">
                            <span><svg class="glyph stroked chevron-down"><use xlink:href="#stroked-chevron-down"></use></svg></span>Odeljenja 
                        </a>
                        <ul class="children collapse linkovi" id="sub-item-4">
                            <li>
                                @Html.ActionLink("Pregled formiranih odeljenja", "PregledKreiranih", "Odeljenje")


                            </li>
                            <li>
                                @Html.ActionLink("Formiranje odeljenja u toku", "Index", "Odeljenje")
                            </li>
                        </ul>
                    </li>
                    <li class="parent">
                        <a data-toggle="collapse" href="#sub-item-5">
                            <span ><svg class="glyph stroked chevron-down"><use xlink:href="#stroked-chevron-down"></use></svg></span>Evidencija
                        </a>
                        <ul class="children collapse linkovi" id="sub-item-5">
                            <li>
                                @Html.ActionLink("Evidencija prisutnosti", "Index", "Evidencija")

                            </li>
                            </ul>
                        </li>

                  
                    
                </ul>
            </div>

            @*@Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @RenderSection("scripts", required: false)*@
            <!--/.sidebar-->
             <div class="col-md-10 col-sm-12 col-md-offset-2 ">
                 <div class="container body-content">
                     @RenderBody()
                     <hr />
                     <footer>
                         <p>&copy; @DateTime.Now.Year - eDnevnikDev</p>
                     </footer>
                 </div>
             </div>
               
     
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    
</body>
</html>
