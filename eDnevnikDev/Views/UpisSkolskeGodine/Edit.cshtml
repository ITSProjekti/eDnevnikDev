                    $('#tromesecje3o').datepicker('option', { minDate: datum2d });
                }

                if (minDatum < datum3o) {
                    datum3o.setDate(datum3o.getDate() + 2);
                    $('#tromesecje3d').datepicker('option', { minDate: datum3o });
                }

                if (minDatum < datum3d) {
                    datum3d.setDate(datum3d.getDate() + 2);
