@model IEnumerable<Ucenik>
@{
    ViewBag.Title = "Lista ucenika";

}



<div class="container">
    <div class="row">
        <div class="col-md-10 col-xs-12 col-md-offset-2">

            <table class="table table-striped table-hover" id="podaci">
                <thead>
                    <tr>
                        <th>JMBG</th>
                        <th>Ime</th>
                        <th>Prezime</th>
                        <th>Adresa</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var Ucenik in Model)
                    {
                        <tr>
                            <td>@Ucenik.JMBG</td>
                            <td>@Ucenik.Ime</td>
                            <td>@Ucenik.Prezime</td>
                            <td>@Ucenik.Adresa</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        $(function () {
            $('#podaci').DataTable({
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.15/i18n/Serbian.json"
                }
            });
        });


    </script>

}