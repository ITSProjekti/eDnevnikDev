@model Profesor
@{
    ViewBag.Title = "Dodaj";
}

<h2>Nov Profesor</h2>
<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <!--<form class="form-horizontal">-->
            <div class="well">
                @using (Html.BeginForm("Sacuvaj", "Profesori", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                    <fieldset>
                        <legend>Novi</legend>
                        <div class="form-group">
                          

                            @Html.LabelFor(p=>p.Ime, new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">

                                
                                @Html.TextBoxFor(p=>p.Ime, new { @class = "form-control", placeholder = " Unesite Ime" })
                                @Html.ValidationMessageFor(p=>p.Ime )
                            </div>
                        </div>
                        <div class="form-group">
                            

                            @Html.LabelFor(p=>p.Prezime, new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">

                         
                                @Html.TextBoxFor(p=>p.Prezime, new { @class = "form-control", placeholder = " Unesite Prezime" })
                                @Html.ValidationMessageFor(p=>p.Prezime)
                            </div>
                        </div>
                        <div class="form-group">
                            

                            @Html.LabelFor(p=>p.Adresa, new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">

                               
                                @Html.TextBoxFor(p=>p.Adresa, new { @class = "form-control", placeholder = "Adresa" })
                                @Html.ValidationMessageFor(p=>p.Adresa)
                            </div>
                        </div>
                        <div class="form-group">
                         
                            @Html.LabelFor(p=>p.Telefon, new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                
                                @Html.TextBoxFor(p => p.Telefon, new { @class = "form-control", placeholder = "Broj telefona" })
                                @Html.ValidationMessageFor(p => p.Telefon)
                            </div>
                        </div>
                        <div class="form-group">

                            @Html.LabelFor(p=>p.RazredniStaresina, new { @class = "col-md-3 control-label" })
                            <div class="checkbox col-md-9">
                                @Html.CheckBoxFor(p=>p.RazredniStaresina )
                            </div>
                        </div>
                        <div class="form-group">

                            @Html.LabelFor(p=>p.Vanredan, new { @class = "col-md-3 control-label" })
                            <div class="checkbox col-md-9">
                                @Html.CheckBoxFor(p=>p.Vanredan )
                            </div>
                        </div>
                                             
                   
                        <div class="form-group">
                            <div class="col-md-10 col-md-offset-2">
                                <button type="reset" class="btn btn-default">Poništi</button>
                                <button type="submit" class="btn btn-primary">Sačuvaj</button>
                            </div>
                        </div>


                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>
<!--       </form> -->



@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}



