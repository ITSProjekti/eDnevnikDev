@using eDnevnikDev.ViewModel
@model KreirajOdeljenjeViewModel
@{
    ViewBag.Title = "Kreiranje odeljenja";
}

<div class="col-md-12 col-xs-12 ">
    <select id="odeljenje" class="form-control">
        <optgroup label="I godina">
            <option value="0">Izaberite</option>
            @foreach (var odeljenje in Model.PrvaGodina)
            {
                <option value="@odeljenje.Id">I-@odeljenje.OznakaID</option>
            }
        </optgroup>
        <optgroup label="II godina">
            @foreach (var odeljenje in Model.DrugaGodina)
            {
                <option value="@odeljenje.Id">II- @odeljenje.OznakaID</option>
            }
        </optgroup>
        <optgroup label="III godina">
            @foreach (var odeljenje in Model.TrecaGodina)
            {
                <option value="@odeljenje.Id">III- @odeljenje.OznakaID</option>
            }
        </optgroup>
        <optgroup label="IV godina">
            @foreach (var odeljenje in Model.CetvrtaGodina)
            {
                <option value="@odeljenje.Id">IV- @odeljenje.OznakaID</option>
            }
        </optgroup>

    </select>
</div>


<div class="container">
    <div class="container">
        <div class="col-md-5">

            <table class="table table-striped table-hover" id="nerasporedjenjiUcenici">
                <thead>
                    <tr>
                        <th>JMBG</th>
                        <th>Ime</th>
                        <th>Prezime</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.ListaNerasporedjenihUcenika.Count; i++)
                      {
                        <tr>
                            <td>
                                @Html.EditorFor(u => u.ListaNerasporedjenihUcenika[i].JMBG)
                            </td>
                            <td>
                                @Html.EditorFor(u => u.ListaNerasporedjenihUcenika[i].Ime)
                            </td>
                            <td>
                                @Html.EditorFor(u => u.ListaNerasporedjenihUcenika[i].Prezime)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="col-md-2">

        </div>

        <div class="col-md-5">

            <table class="table table-striped table-hover" id="rasporedjeniUcenici">
                <thead>
                    <tr>
                        <th>JMBG</th>
                        <th>Ime</th>
                        <th>Prezime</th>
                    </tr>
                </thead>
                <tbody>
                    @*@foreach (var ucenik in Model.ListaNerasporedjenihUcenika)
                        {
                            <tr>
                                <td>@ucenik.JMBG</td>
                                <td>@ucenik.Ime</td>
                                <td>@ucenik.Prezime</td>
                            </tr>
                        }*@
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        $(function () {
            $('#nerasporedjenjiUcenici').DataTable({
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.15/i18n/Serbian.json"
                }
            });

            $('#rasporedjeniUcenici').DataTable({
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.15/i18n/Serbian.json"
                }
            });

        });


    </script>

}
